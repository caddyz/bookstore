<!--pages/register/register.wxml-->
<view class="container2"> 
 <view class="login-icon1"> 
 <image class="login-img1" src="../img/zhuce.jpg"></image> 
 </view> 
  <!--账号-->
 <view class="inputView1"> 
  <image class="nameImage1" src="../img/name.png"></image> 
  <label class="loginLab1">账号</label> 
  <input class="inputText1" name='username' placeholder="用户名" type="text" bindinput="usernameinput"/>  
 </view> 
 <view class="line"></view> 

 <!--密码-->
 <view class="inputView1"> 
  <image class="keyImage1" src="../img/key.png"></image> 
  <label class="loginLab1">密码</label> 
   <input class="inputText1" name='password' placeholder="密码" type="password" bindinput="passwordinput"/>
 </view> 
  <view class="line"></view> 
 <view class="inputView1">
     <image class="keyImage1" src="../img/key.png"></image> 
      <label class="loginLab1">确认密码</label> 
      <input class="inputText1" name='passwordconfirm' placeholder="确认密码"  type="password" bindinput="passwordconfirminput" />
    </view>
 <!--按钮-->
 <view class="signin">
      <button type="submit" catchtap="signin">注册</button>
    </view>
  </view>

