<!-- 物流信息 -->
<view bindtap="kuaidiInfo" class="kuaidi">
	<view class="kuaidiIcon">
		<image src="../orderDetail/images/member_list_arrow.png"></image>
	</view>
	<view class="kuaidiInfo">
		<view>
			<text>承运来源：</text><text>{{oderDetail.express}}</text>
		</view>
		<view>
			<text>运单编号：</text><text>{{oderDetail.expressId}}</text>
		</view>
		<view>
			<text>物流状态：</text><text>{{oderDetail.logisticsStartues}}</text>
		</view>
	</view>
</view>

<!-- 收货地址 -->
<view bindtap="todeliver" class="address">
	<view>
		<text class="name">收货人：{{oderDetail.receiveConsignee}}</text><text class="number">电话：{{oderDetail.receiveMobile}}</text>
	</view>
	<view>
		地址：<text> {{oderDetail.receiveProvince}}省 {{oderDetail.receiveCity}}市 {{oderDetail.receiveCounty}}区（市） 详细{{oderDetail.receiveDetail}}</text>
	</view>
</view>

<!-- 订单详情 -->
<view class="orderDetails">
	<view class="orderDetailsTit">订单详情</view>
	<view class="orderDetailsStatus">
		<view>订单编号:<text class="orderNum">{{oderDetail.orderId}}</text></view>
		<view>下单时间:<text class="orderNum"></text> <text>{{oderDetail.orderDate}} {{oderDetail.orderTime}}</text></view>
		<view>订单状态<text class="orderStatus"> {{oderDetail.orderStatus}}</text></view>
	</view>
</view>

<!-- 商品订单详情 -->
<view class="productDetails">
	<view class="orderListTitle">
		<view class="userImg"><image src="{{userInfoAvatar}}"></image></view>
		<text class="userName">{{nickName}}</text>
		<text class="orderStatus">{{oderDetail.orderStatus}}</text>
	</view>
	<view bindtap="toProductDetails" class="orderListDetails">
		<view class="productImg">
			<image src="{{oderDetail.imgUrl}}"></image>
		</view>
		<view class="productInfo">
			<view class="productTitle">{{oderDetail.bookName}}</view>
			<text class="productPrice">￥{{oderDetail.bookPrice}}</text>
			<text class="productQuantity">x{{oderDetail.bookNum}}</text>
		</view>
	</view>
	<view class="productCount">
		<view>合计：￥<text>{{oderDetail.tatolPrice}}</text></view>
	</view>
</view>	