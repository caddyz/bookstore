<scroll-view class="scroll" scroll-y="true">
<form class='receiveAddress' bindsubmit="editorAddress" >
<view wx:for="{{regions}}" wx:for-index="idx" wx:for-item="itemName">
        <view class="addressList">
        <image class='addr_img' src='../addressList/images/receive_address.png'></image>收货地址: 
      <view class='real'>{{itemName.province}} {{itemName.city}} {{itemName.county}} {{itemName.details}}               </view>
      </view>
      <view class="addressList">
        <image class='addr_img' src='../addressList/images/recieve_user.png'></image>收货人: 
      <view class='real'>{{itemName.consignee}} </view>
      </view>

      <view class="addressList">
        <image class='addr_img' src='../addressList/images/receivePhone.png'></image>收货人电话:
      <view class='real'>{{itemName.mobile}} </view>
      </view>
                <p class="ui-list-item-del" data-id="{{itemName.id}}" bindtap="delAddress">删除</p>
                <p class="ui-list-item-editor" form-type='sumbit' data-id="{{itemName.id}}" bindtap="editor">编辑</p>
                <view><text>\n</text></view>
  </view>
</form>
      <view class="add-address" catchtap='addAddress'>
        <image class="add-img"  src="../addressList/images/add_address.png"></image>新增地址
      </view>
      
</scroll-view>
