

<!--装订-->
<view class="container">
  <!--左边侧栏-->
  <view class="num_left">
    <block wx:for="{{booksLeft}}" wx:key="id">
      <!--当前项的id等于item项的id-->
      <!--用data-index记录这个数据在数组的下标位置
      供打开2级页面使用-->
      <view class="num_left_items" bindtap="switchRightTab" data-index="{{index}}" 
      data-id="{{item.id}}">{{item.bookCategory}}</view>  
    </block>
  </view>
  <!--右边侧栏-->
  <view class="num_right">
    <!--如果有数据，就遍历项-->
      <block wx:for="{{booksRight}}">
        <button class="num_right_items" bindtap='alljump'  data-item='{{item}}'>
          <view class='bookpic' >
            <image src='http://images.bookstore.com/{{item.bookCoverImage}}' mode='scaleToFill'
              style="width: 100%; height: 100%;background-color: #eeeeee;">
            </image> 
          </view>
          <input type='text' class='book-name' value='{{item.bookName}}' 
          disabled='true'></input>
        </button>
      </block>
  </view>
</view>

