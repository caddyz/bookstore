/* pages/classify/detail/detail.wxss */
page {
  /* 弹性布局 */
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
swiper {
  height: 500rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column;
  /* 设置元素的上外边距 */
  margin-top: 15rpx;
  /* 设置元素的下外边距 */
  margin-bottom: 0rpx;
}
/* 设置名字 */
 .detail .book-name {
  font-size: 40rpx;
  margin: 10rpx;
  color: teal;
  /* text-align: justify; */
  text-align: justify;
}
/* 设置折扣价 */
.detail .book-price {
  color: red;
  font-size: 40rpx;
  margin: 10rpx;
}
/* 设置金额 */
.detail .book-priced {
    color: red;
  font-size: 40rpx;
  margin: 10rpx;
}
/* 设置书籍情况颜色 */
.detail .book-status{
  /* color:rgb(0, 255, 179); */
