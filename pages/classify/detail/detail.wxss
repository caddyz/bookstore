.detail .book-cotegory{
  font-size: 40rpx;
   margin: 10rpx;
   /* color: goldenrod; */
}


.detail-nav {
  display: flex;
  flex-direction: row;
  /* align-items 设置了flex容器的对齐方式 */
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  /* z-index 属性指定一个元素的堆叠顺序,如果值设置为正数，越大这对应的view也会越在上面一层，
  负数就是在底层 */
  z-index: 10;
  width: 100%;
  height: 100rpx;
}
.button-yellow {
  background-color: green; /* yellow */
}
.button-red {
  background-color: red; /* 红色 */
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  /* border-radius 设置边界圆角 */
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}

/* 占位 */
.temp {
  height: 100rpx;
}
text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}

