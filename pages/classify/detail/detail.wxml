<!--pages/classify/detail/detail.wxml-->
<!-- 实现轮播图效果 -->
<!-- indicator-dots:是否显示面板指示点
autoplay:是否自动切换
interval:自动切换时间间隔
duration:滑动动画时长
 -->
 
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" 
interval="{{interval}}" duration="{{duration}}">

<!-- 这里的<block>标签是用来组织代码的，wx:for="{{imgUrls}} 相当于绑定了.
js文件中的data中imgUrls数组的数据，并直接将数组展开了。 -->
  <!-- bindtap="previewImage"，图片预览功能 -->
<block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" data-src="{{item}}" bindtap="previewImage"></image>
    </swiper-item>
  </block>
</swiper>

<view class='main'>
<!-- scroll-view垂直滚动 -->
<scroll-view scroll-y="true">
  <!-- 循环遍历 -->
    <block wx:for="{{list}}">
        <text> \n </text>
  <view class="detail" bindtap='allSelect' data-item='{{item}}'>
  书名:<input type='text' class='book-name' value='{{item.bookName}}' 
          disabled='true'></input>
   作者: <block wx:for="{{author}}">
    <input type='text' class='book-author' value='{{item.authorName}}' 
          disabled='true'></input>
    </block>
   金额:<input type='text' class='book-priced' value='￥{{item.bookSalesPrice}}' 
          disabled='true'></input>
     <block wx:for="{{out}}">
      <input type='text' class='book-prices' value='原价:{{item.bookSalesPrice}}' disabled='true'></input>
     <input type='text' class='activity-discount' value='折扣率:({{item.activityDiscount}}折)' disabled='true'></input>
      <input type='text' class='book-price' 
value='甩卖价:￥{{item.discountPrice}}' disabled='true'></input>
               <text> \n </text>
    打折时间:  <input type='text' class='activity-date' value='({{item.activityStart}}~{{item.activityEnd}})' disabled='true'></input>
            </block>
    种类:<input type='text' class='book-cotegory' value='{{item.bookCategory}}' 
          disabled='true'></input>
    出版社:<input type='text' class='book-publish' value='{{item.publishName}}' 
          disabled='true'></input>
           <block wx:for="{{Nums}}">
    库存:<input type='text' class='book-num' value='{{item.stockNum}}' 
          disabled='true'></input>
            </block>
    销量:<input type='text' class='book-sales' value='{{item.stockSales}}' 
          disabled='true'></input>
    简介:<textarea bindblur="bindTextAreaBlur" class='book-profile'
     value='{{item.bookProfile}}' disabled='true'/>
  </view>
    </block>
     <text> \n </text>
  <view class="separate"></view>
 评论: <block wx:for="{{item}}">
  <view class="detail" data-item='{{item}}'>
<input type='text' class='comment-content' value='{{item.commentContent}}' 
          disabled='true'></input>
  </view>
    </block>
  <!-- 表单 -->
<form bindsubmit="formSubmit">
<input type="text" name="commentContent" placeholder='请输入评论内容' 
class="input-comment" bindinput="handNewComment"/>
<button formType="submit" class="btn" bindtap='commentAll'>评论</button>
</form>

  <view class="separate"></view>
  <view class="temp"></view>
</scroll-view>
</view>
<!-- 底部的悬浮栏 -->
<view class="detail-nav">
<image bindtap='handleCollection' wx:if='{{isCollected}}' 
src='https://ss2.bdstatic.com/70cFvnSh_Q1YnxGkpoWK1HF6hhy/it/u=3411382528,345291280&fm=26&gp=0.jpg'></image>
<image bindtap='handleCollection' wx:if='{{!isCollected}}' 
src='https://ss0.bdstatic.com/70cFuHSh_Q1YnxGkpoWK1HF6hhy/it/u=971562027,3284667727&fm=26&gp=0.jpg'></image>
  <button class="button-yellow" bindtap="addCar" formType="submit" >加入购物车</button>
  <button class="button-red" bindtap="nowBuy" formType="submit">立即购买</button>
</view> 














