/**index.wxss**/
@import "../../iconfont/iconfont.wxss";
.page-section{
  margin-bottom: 30rpx;
}
.top-search{
  margin: 0 auto;
  text-align: center;
  width: 90%;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #F7F7F7
}
 swiper{
    width:100%;
    height:325rpx
 }
 swiper image{
    width:100%;
    height:325rpx
 }
 .mz-classify{
   margin-bottom: 10rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-around;
 }
 .mz-font-color{
   color: #838B83;
   font-size: 25rpx;
 }
 .discard{
   width: 100%;
   height: 30rpx;
   background-color:whitesmoke;
 }
.main-bookinfo{
  width: 90%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.mb-newbook{
  color:silver;
  position: relative;
  margin-left: 90rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
}
.mb-more{
  margin-left: 15rpx;
  color:silver;
}
.mb-more-more{
  position: absolute;
  margin-left: -45rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
}
.bi-tr{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.view-controller1,.view-controller2{
  width: 35%;
  height: 430rpx;
}
.book-data{
  height: 420rpx;
  border: 1rpx,solid,whitesmoke;
}
.view-controller1{
  margin-left: 45rpx;
}
.view-controller2{
  margin-right: 45rpx;
}
.book-info-pic{
  height: 64%;
  background-color: red;
}
.book-info-title,.book-info-author,.book-info-price{
  height: 12%;
}
.book-info-title{
  background-color: blue;
  font-size: 30rpx;
}
.book-info-author{
  background-color: green;
  font-size: 30rpx;
}
.book-info-price{
  background-color: yellow;
  font-size: 30rpx;
}
