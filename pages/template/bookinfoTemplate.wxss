.book-data{
  height: 420rpx;
  border: 1rpx,solid,whitesmoke;
}
.book-info-pic{
  height: 64%;
}
.book-info-title,.book-info-author,.book-info-price{
  height: 12%;
}
.book-info-title{
  font-size: 30rpx;
}
.book-info-author{
  font-size: 30rpx;
}
.book-info-price{
  font-size: 30rpx;
}
.loading{
  padding: 10rpx;
  text-align: center;
}
.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-image: url("data:image/png;base64,");
  background-repeat:no-repeat; 
  -moz-background-size:100% 100%;
  background-size: contain;
  animation: rotate 1s linear infinite;
}
.loading.complete:before{
  display: none;
}
.author-info{
  display: flex;
  flex-direction: row;
}