<!--pages/person/person.wxml-->

<view class="container1"> 
 <view class="login-icon"> 
 <image class="login-img" src="../img/loginLog.jpg"></image> 
 </view> 
 
 <!--账号-->
 <view class="inputView"> 
 
  <image class="nameImage" src="../img/name.png"></image> 
  <label class="loginLab">账号</label> 
  <input class="inputText" name='account' placeholder="请输入邮箱账号" type="text" bindinput="accountInput"/>  
 </view> 
 <view class="line"></view> 

 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="../img/key.png"></image> 
  <label class="loginLab">密码</label> 
   <input class="inputText" name='password' placeholder="请输入密码" type="password" bindinput="passwordinput"/>
 </view> 
 <!--按钮-->
 
 <view class='login'>
  <button  type="primary" catchtap="login">登录</button>
 </view>
 <view class="signIn">
      <button  class='left' type="submit" catchtap="register">注册</button>
      <button  class='right' type='submit' catchtap='retrieve'>忘记密码</button>
    </view>
</view>
<view>{{message}}</view>
