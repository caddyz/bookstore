/* pages/person/person.wxss */
page{ 
 height: 100%; 
} 

  

.container1 { 
 height: 100%; 
 display: flex;
  /*项目将垂直显示，正如一个列一样。  */
 flex-direction: column; 
 /* 内边距 */
 padding: 0; 
 /* 浏览器呈现出带有指定宽度和高度的框，并把边框和内边距放入框中。 */
 box-sizing: border-box; 
 background-color: #f2f2f2
} 

  

/*登录图片*/

.login-icon{ 
 flex: none; 
} 

.login-img{ 
 width: 600rpx; 
} 


.inputView { 
 background-color: #fff; 
 line-height: 44px; 
} 

/*输入框*/
.nameImage, .keyImage { 
 margin-left: 22px; 
 width: 14px; 
 height: 14px
} 

  

.loginLab { 
 margin: 15px 15px 15px 10px; 
 color: #545454; 
 font-size: 14px

} 

.inputText { 
 flex: block; 
 float: right; 
 text-align: right; 
 /* 右边距 */
 margin-right: 22px; 
 /* 对象上边的外距离 */
 margin-top: 11px; 
 color: #cccccc; 
 font-size: 14px
} 

.line { 
 width: 100%; 
 height: 1px; 
 background-color: #cccccc; 
 /* 对象上边的外距离 */
 margin-top: 1px; 

}
 .signIn {
  /*  //将对象作为弹性伸缩盒显示  可以左右布局*/
  display: flex;
  /* 居中 */
  align-items: center;
}
.left{

 font-size: 40rpx;
 /* 左边距 */
 margin-left:0px;
}
.right{
  /* 字体大小 */
 font-size: 40rpx;
/*右边距  */
 margin-right:0px; 
}

